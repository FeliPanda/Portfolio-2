---
interface Props {
    variant?: 'primary' | 'secondary' | 'danger';
    class?: string; // Acepta clases adicionales
}

const { variant = 'primary', class: additionalClasses = '' } = Astro.props;

let classNames = 'px-4 py-2 rounded-full text-sm font-medium ';

// Aplica las clases basadas en la variante
switch (variant) {
    case 'primary':
        classNames += 'bg-[#1ed760] text-white ';
        break;
    case 'secondary':
        classNames += 'bg-gray-500 text-white';
        break;
    case 'danger':
        classNames += 'bg-red-500 text-white';
        break;
    default:
        classNames += 'bg-gray-200 text-black';
}

// Añade la sombra para el efecto de iluminación
classNames += ' shadow-[0_0_10px_2px_rgba(30,215,96,0.6)] transition-shadow duration-300 ease-in-out';

// Combina las clases base con las adicionales
classNames += ` ${additionalClasses}`;
---

<button class={classNames}>
    <slot />
</button>
